<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/silver"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.hp_pc.aticustestone.FragmentBio"
    android:scrollbarAlwaysDrawVerticalTrack="true">

    <!-- TODO: Update blank fragment layout -->

<ScrollView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/biopic"
        android:src="@color/colorAccent"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/navcircleview"
        app:civ_border_color="@color/colorPrimaryDark"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="28dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mr. Lawyer Name"
        android:layout_below="@+id/profile_image"
        android:layout_alignStart="@+id/profile_image"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:id="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Experience : 8 Years"
        android:layout_below="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:id="@+id/textView3" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar"
        android:scaleY="0.7"
        android:scaleX="0.7"
        android:layout_below="@+id/biopic"
        android:layout_centerHorizontal="true"
        />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:elevation="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        card_view:cardCornerRadius="6dp"
        card_view:contentPadding="1dp"
        card_view:cardElevation="10dp"
        android:layout_below="@+id/ratingBar"

        android:id="@+id/cardView">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Types of cases handled"
                android:textColor="#F000"/>

            <TextView
                android:layout_width="292dp"
                android:layout_height="wrap_content"
                android:text="Random Data that might be helpful"
                android:id="@+id/textView5"
                android:layout_marginStart="1dp"/>
        </LinearLayout>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:elevation="10dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        card_view:cardCornerRadius="6dp"
        card_view:contentPadding="1dp"
        card_view:cardElevation="10dp"
        android:layout_below="@+id/cardView"

        android:id="@+id/cardView2">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Guidlines for Line of Questioning"
                android:textColor="#F000"/>

            <TextView
                android:layout_width="292dp"
                android:layout_height="wrap_content"
                android:text="Random Data that might be helpful"
                android:id="@+id/textView6"
                android:layout_marginTop="15dp"
                android:layout_marginStart="1dp"/>
        </LinearLayout>


    </android.support.v7.widget.CardView>
    </RelativeLayout>
</ScrollView>


    <android.support.v7.widget.CardView
        android:layout_width="64dp"
        android:layout_height="63dp"
        android:layout_marginTop="270dp"
        android:layout_marginLeft="100dp"
        card_view:cardCornerRadius="30dp"
        card_view:cardBackgroundColor="@color/colorPrimary"
        card_view:cardElevation="20dp"
        android:clickable="true"
        android:id="@+id/chtbtna"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="47dp"
                android:layout_height="39dp"
                android:src="@drawable/ic_chat"
                android:id="@+id/imageView"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginStart="15dp"
                android:textSize="14sp"
                android:text="Chat"
                android:textColor="#FFFF"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="64dp"
        android:layout_height="63dp"

        android:layout_marginTop="270dp"
        android:layout_marginLeft="220dp"
        card_view:cardCornerRadius="30dp"
        card_view:cardBackgroundColor="@color/colorAccent"
        card_view:cardElevation="20dp"
        android:clickable="true"
        android:id="@+id/callbtna"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="47dp"
                android:layout_height="39dp"
                android:src="@drawable/ic_phone"
                android:id="@+id/callnew"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginStart="17dp"
                android:textSize="14sp"
                android:textColor="#FFF"
                android:text="Call"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>


    </android.support.v7.widget.CardView>


</RelativeLayout>
