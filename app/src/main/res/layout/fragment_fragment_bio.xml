<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.hp_pc.aticustestone.FragmentBio"
    android:scrollbarAlwaysDrawVerticalTrack="true">

    <!-- TODO: Update blank fragment layout -->

<ScrollView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/biopic"
        android:src="@color/white"
        />

        <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="2dp"
            android:layout_marginTop="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        card_view:contentPadding="4dp"
        card_view:cardElevation="10dp"
        android:layout_below="@+id/ratingBar"
        android:id="@+id/cardView">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="1dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_creds_bio"
                android:id="@+id/imgcredbio"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/imgcredbio"
                android:text="I Practice here"
                android:layout_marginTop="3dp"
                android:id="@+id/credtitle"
                android:textColor="#F000"/>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imgcredbio"
                android:layout_marginStart="11dp"
                android:layout_marginTop="10dp">
                <TableRow>
                    <TextView android:id="@+id/tvCleaningDot1"
                        android:layout_height="wrap_content"
                        android:text="•  "
                        android:singleLine="false"
                        />
                    <TextView android:id="@+id/tvCleaningFirst"
                        android:layout_height="wrap_content"
                        android:text="Delhi High Court"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:singleLine="false"
                        />
                </TableRow>
                <TableRow>
                <TextView android:id="@+id/tvCleaningDot2"
                    android:layout_height="wrap_content"
                    android:text="•  "
                    android:singleLine="false"
                    />
                <TextView android:id="@+id/tvCleaningSecond"
                    android:layout_height="wrap_content"
                    android:text="D21/11, Safdarjung Enclave, New Delhi"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:singleLine="false"
                    />
            </TableRow>

            </TableLayout>

        </RelativeLayout>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="3dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        card_view:contentPadding="4dp"
        card_view:cardElevation="10dp"
        android:layout_below="@+id/cardView"

        android:id="@+id/cardView2">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_educationbio"
                android:id="@+id/imgedubioor"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/imgedubioor"
                android:text="My Education"
                android:layout_marginTop="3dp"
                android:id="@+id/credtitle22"
                android:textColor="#F000"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgedubioor"
            android:layout_marginStart="11dp"
            android:layout_marginTop="10dp">
            <TableRow>
                <TextView android:id="@+id/tvCleaningDot31"
                    android:layout_height="wrap_content"
                    android:text="•  "
                    android:singleLine="false"
                    />
                <TextView android:id="@+id/tvCleaningFirst21"
                    android:layout_height="wrap_content"
                    android:text="LLB from abc College"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:singleLine="false"
                    />
            </TableRow>
            <TableRow>
                <TextView android:id="@+id/tvCleaningDot41"
                    android:layout_height="wrap_content"
                    android:text="•  "
                    android:singleLine="false"
                    />
                <TextView android:id="@+id/tvCleaningSecond22"
                    android:layout_height="wrap_content"
                    android:text="LLM fro College qwe"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:singleLine="false"
                    />
            </TableRow>

        </TableLayout>
        </RelativeLayout>


    </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:elevation="3dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            card_view:contentPadding="4dp"
            card_view:cardElevation="10dp"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/cardView2"
            android:id="@+id/cardViewbioEducation">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_educationbio"
                android:id="@+id/imgedubio"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/imgedubio"
                android:text="Reviews"
                android:layout_marginTop="3dp"
                android:id="@+id/edutitle"
                android:textColor="#F000"/>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imgedubio"
                android:layout_marginStart="11dp"
                android:layout_marginTop="10dp">
                <TableRow>
                    <TextView android:id="@+id/tvCleaningDot3"
                        android:layout_height="wrap_content"
                        android:text="•  "
                        android:singleLine="false"
                        />
                    <TextView android:id="@+id/tvCleaningFirst2"
                        android:layout_height="wrap_content"
                        android:text="LLB from abc College"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:singleLine="false"
                        />
                </TableRow>
                <TableRow>
                    <TextView android:id="@+id/tvCleaningDot4"
                        android:layout_height="wrap_content"
                        android:text="•  "
                        android:singleLine="false"
                        />
                    <TextView android:id="@+id/tvCleaningSecond2"
                        android:layout_height="wrap_content"
                        android:text="LLM fro College qwe"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:singleLine="false"
                        />
                </TableRow>

            </TableLayout>


        </RelativeLayout>
        </android.support.v7.widget.CardView>


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/navcircleview"
            app:civ_border_color="@color/colorPrimaryDark"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="13dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mr. Lawyer Name"
            android:textSize="18sp"
            android:id="@+id/textView2"
            android:layout_below="@+id/profile_image"
            android:layout_centerHorizontal="true" />

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Experience : 8 Years"
            android:id="@+id/textView3"
            android:layout_below="@+id/textView2"
            android:layout_centerHorizontal="true" />

        <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar"
        android:scaleY="0.5"
        android:scaleX="0.5"
            android:layout_below="@+id/textView2"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
</ScrollView>


    <android.support.v7.widget.CardView
        android:layout_width="64dp"
        android:layout_height="63dp"
        android:layout_marginTop="425dp"
        android:layout_marginLeft="100dp"
        card_view:cardCornerRadius="30dp"
        card_view:cardBackgroundColor="@color/colorPrimary"
        card_view:cardElevation="20dp"
        android:clickable="true"
        android:id="@+id/chtbtna"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="47dp"
                android:layout_height="39dp"
                android:src="@drawable/ic_chat"
                android:id="@+id/imageView"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginStart="15dp"
                android:textSize="14sp"
                android:text="Chat"
                android:textColor="#FFFF"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="64dp"
        android:layout_height="63dp"

        android:layout_marginTop="425dp"
        android:layout_marginLeft="220dp"
        card_view:cardCornerRadius="30dp"
        card_view:cardBackgroundColor="@color/colorPrimaryText"
        card_view:cardElevation="20dp"
        android:clickable="true"
        android:id="@+id/callbtna"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="47dp"
                android:layout_height="39dp"
                android:src="@drawable/ic_phone"
                android:id="@+id/callnew"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginStart="17dp"
                android:textSize="14sp"
                android:textColor="#FFF"
                android:text="Call"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>


    </android.support.v7.widget.CardView>


</RelativeLayout>
