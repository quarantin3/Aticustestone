<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.hp_pc.aticustestone.FragmentBio"
    android:scrollbarAlwaysDrawVerticalTrack="true">

    <!-- TODO: Update blank fragment layout -->

<ScrollView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/biopic"
        android:src="@color/white"
        />

        <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:elevation="5dp"
            android:layout_marginTop="12dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        card_view:contentPadding="1dp"
        card_view:cardElevation="10dp"
        android:layout_below="@+id/ratingBar"
        android:id="@+id/cardView">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="2dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_creds_bio"
                android:id="@+id/imgcredbio"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/imgcredbio"
                android:text="I Practice here"
                android:layout_marginTop="3dp"
                android:id="@+id/credtitle"
                android:textColor="#F000"/>

            <TextView
                android:layout_width="292dp"
                android:layout_height="wrap_content"
                android:text="Supreme court...(More Specifics)"
                android:id="@+id/textView5"
                android:layout_below="@id/imgcredbio"
                android:layout_marginStart="4dp"/>
        </RelativeLayout>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:elevation="10dp"
        android:layout_marginTop="3dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        card_view:contentPadding="1dp"
        card_view:cardElevation="10dp"
        android:layout_below="@+id/cardView"

        android:id="@+id/cardView2">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reviews by clients"
                android:textColor="#F000"/>

            <TextView
                android:layout_width="292dp"
                android:layout_height="wrap_content"
                android:text="Random Data that might be helpful"
                android:id="@+id/textView6"
                android:layout_marginTop="15dp"
                android:layout_marginStart="1dp"/>
        </LinearLayout>


    </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:elevation="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            card_view:contentPadding="1dp"
            card_view:cardElevation="10dp"
            android:layout_marginTop="3dp"
            android:layout_below="@+id/cardView2"
            android:id="@+id/cardViewbioEducation">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_educationbio"
                android:id="@+id/imgedubio"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/imgedubio"
                android:text="My Education"
                android:layout_marginTop="3dp"
                android:id="@+id/edutitle"
                android:textColor="#F000"/>

            <TextView
                android:layout_width="292dp"
                android:layout_height="wrap_content"
                android:text="College a, College b"
                android:id="@+id/textView77"
                android:layout_below="@id/imgedubio"
                android:layout_marginStart="4dp"/>
        </RelativeLayout>
        </android.support.v7.widget.CardView>


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/navcircleview"
            app:civ_border_color="@color/colorPrimaryDark"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="13dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mr. Lawyer Name"
            android:textSize="18sp"
            android:id="@+id/textView2"
            android:layout_below="@+id/profile_image"
            android:layout_centerHorizontal="true" />

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Experience : 8 Years"
            android:id="@+id/textView3"
            android:layout_below="@+id/textView2"
            android:layout_centerHorizontal="true" />

        <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar"
        android:scaleY="0.5"
        android:scaleX="0.5"
            android:layout_below="@+id/textView2"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
</ScrollView>


    <android.support.v7.widget.CardView
        android:layout_width="64dp"
        android:layout_height="63dp"
        android:layout_marginTop="425dp"
        android:layout_marginLeft="100dp"
        card_view:cardCornerRadius="30dp"
        card_view:cardBackgroundColor="@color/colorPrimary"
        card_view:cardElevation="20dp"
        android:clickable="true"
        android:id="@+id/chtbtna"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="47dp"
                android:layout_height="39dp"
                android:src="@drawable/ic_chat"
                android:id="@+id/imageView"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginStart="15dp"
                android:textSize="14sp"
                android:text="Chat"
                android:textColor="#FFFF"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="64dp"
        android:layout_height="63dp"

        android:layout_marginTop="425dp"
        android:layout_marginLeft="220dp"
        card_view:cardCornerRadius="30dp"
        card_view:cardBackgroundColor="@color/colorPrimaryText"
        card_view:cardElevation="20dp"
        android:clickable="true"
        android:id="@+id/callbtna"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="47dp"
                android:layout_height="39dp"
                android:src="@drawable/ic_phone"
                android:id="@+id/callnew"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginStart="17dp"
                android:textSize="14sp"
                android:textColor="#FFF"
                android:text="Call"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>


    </android.support.v7.widget.CardView>


</RelativeLayout>
